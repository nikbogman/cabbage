// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  slug        String    @unique
  name        String    @unique
  description String
  products    Product[]
}

model Product {
  id         String   @id @default(cuid())
  Category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  slug        String @unique
  name        String @unique
  description String

  variants Variant[]
}

model Variant {
  id        String  @id @default(cuid())
  Product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  slug        String @unique
  name        String @unique
  description String
  optionName  String

  price Float
  stock Int

  items Item[]
}

model Cart {
  id    String @id @default(cuid())
  total Float  @default(0)

  items  Item[]
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @unique
}

model Item {
  id        String  @id @default(cuid())
  Variant   Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  variantId String

  total    Float @default(0)
  quantity Int   @default(0)

  Cart   Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}

model Order {
  id          String @id @default(cuid())
  total       Float
  cart        Json
  userDetails Json
}

model User {
  id           String @id
  firstName    String
  lastName     String
  address      String
  mobileNumber String

  hash  String
  salt  String
  email String @unique
  Cart  Cart?
}
